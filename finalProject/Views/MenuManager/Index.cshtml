@model IEnumerable<finalProject.Models.Item>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<!--add new -->
<p>
    <a href="@Url.Action("Create")" class="btn btn-default" title="Edit"><i class="fa fa-plus"></i>Add new item</a>
</p>

<!-- table of all details -->
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Menu.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShortDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DetailedDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.URL)
        </th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Menu.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ShortDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DetailedDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.URL)
        </td>
        <!-- info, edit, delete icons -->
        <td>
            <a href="@Url.Action("Edit", new { id = item.ItemID })" class="btn btn-default" title="Edit"><i class="fa fa-pencil"></i></a>
        </td>
        <td>
            <a href="@Url.Action("Details", new { id = item.ItemID })" class="btn btn-default" title="Info"><i class="fa fa-info"></i></a>
        </td>
        <td>
            <a href="@Url.Action("Delete", new { id = item.ItemID })" class="btn btn-default" title="Delete"><i class="fa fa-trash"></i></a>
        </td>
    </tr>
}

</table>
